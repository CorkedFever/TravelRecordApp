<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="BlueColor">#1E90FF</Color>
            <Color x:Key="WhiteColor">#000000</Color>
            <Color x:Key="BlackColor">#000000</Color>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BlueColor}"/>
                
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource BlackColor}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource BlackColor}"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>